@page "/AddNewEmployee"
@using EmployeeCrudBlazor.Data
@inject EmployeeService employeeService
@inject NavigationManager NavigationManager

<h3>AddNewEmployee</h3>



    <form>
        <div class="row">
            <div class="col-md-8">
                <div class="for-group">
                    <label for="Name" class="control-label"> First Name</label>
                    <input form="FirstName" class="form=control" @bind="@obj.FirstName"/>
                </div>
            <div class="for-group">
                <label for="Name" class="control-label"> Last Name</label>
                <input form="LastName" class="form=control" @bind="@obj.LastName" />
            </div>

            </div>
        </div>

        

        <button type="button" @onclick="CreateNewEmployeeDetails">Add Employee</button>
    </form>



@code {
    Employee obj = new Employee();
   

    protected async Task CreateNewEmployeeDetails()
    
        
        {
            await employeeService.AddNewEmployee(obj); // Assuming AddEmployee is defined
            NavigationManager.NavigateTo("/Employees");
        }
        
     
            void Cancel()
            {
        NavigationManager.NavigateTo("/Employees");
            }
        
    
}


